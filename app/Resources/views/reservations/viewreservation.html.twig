{% extends 'base.html.twig' %}
{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}

<div class="row top-buffer">
	<div class="col-sm-12">
		<h2>Reservation # {{reservationID}}</h2>
		{% include('flash-messages.html.twig') %}
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8">
		<ul class="nav nav-tabs">
		  <li class="active"><a href="{{path('viewreservation')}}/{{reservationID}}">Details</a></li>
		  <li><a href="{{path('viewreservationguest')}}/{{reservationID}}">Guests</a></li>
		  <li><a href="{{path('viewreservationdollars')}}/{{reservationID}}">Dollars</a></li>
		  <li><a href="{{path('viewreservationnotes')}}/{{reservationID}}">Notes</a></li>
		  <li><a href="{{path('viewreservationcancel')}}/{{reservationID}}">Cancel</a></li>
		</ul>
	</div>
</div>

{% if status == "Cancelled" %}
<div class="row top-buffer">
	<div class="col-sm-8">
		<div class="alert alert-danger">This reservation is currently <b>CANCELLED</b></div>
	</div>
</div>
{% endif %}

<div class="row top-buffer">
	<div class="col-sm-8"><h3>Details</h3></div>
</div>


<div class="row top-buffer">
	<div class="col-sm-3"><b>Invoice</b></div>
	<div class="col-sm-3"><b>Booker</b></div>
	<div class="col-sm-3"><b>Date Booked</b></div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">
		<a href="#"><i class="fa fa-print"></i></a>&nbsp;
		<a href="#"><i class="fa fa-envelope-o"></i></a>&nbsp;
		<a href="#"><i class="fa fa-eye"></i></a>
	</div>
	<div class="col-sm-3"><a href="mailto:{{email}}">{{first_name}} {{last_name}}</a></div>
	<div class="col-sm-3">{{date_booked}}</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3"><b>Check-In</b></div>
	<div class="col-sm-3"><b>Check-Out</b></div>
	<div class="col-sm-3"><b>Nights</b></div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">{{checkin_date}}</div>
	<div class="col-sm-3">{{checkout_date}}</div>
	<div class="col-sm-3">{{nights}}</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3"><b>PAX:</b></div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">
		Adults: {{pax}} Children: {{children}}
	</div>
	<div class="col-sm-3">
		{% if child1_age != "" %}Child 1 Age: {{child1_age}}{% endif %}
	</div>
	<div class="col-sm-3">
		{% if child2_age != "" %}Child 2 Age: {{child2_age}}{% endif %}
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3"><b>Reseller:</b></div>
	<div class="col-sm-3"><b>Status:</b></div>
	<div class="col-sm-3"><b>Commission:</b></div>
</div>

<div class="row top-buffer">
	{% if reseller_data != "" %}
		{% for r in reseller_data %}
			<div class="col-sm-3">
			<form action="{{path('assignreseller')}}" method="get" style="display:inline">
			<input type="hidden" name="reservationID" value="{{reservationID}}">
			<input type="submit" value="Change" class="btn btn-primary">
			</form>
			&nbsp;&nbsp;{{r.company}}
			</div>
			<div class="col-sm-3">
				{{r.status}}
			</div>
			<div class="col-sm-3">
				{{r.commission}} %
			</div>
		{% endfor %}	
	{% else %}
	<div class="col-sm-9">
		<form action="{{path('assignreseller')}}" method="get" style="display:inline">
		<input type="hidden" name="reservationID" value="{{reservationID}}">
		<input type="submit" value="Assign Reseller" class="btn btn-primary">
		</form>
	</div>
	{% endif %}
</div>

<div class="row top-buffer">
	<div class="col-sm-3"><b>Reseller Agent</b></div>
	<div class="col-sm-3"><b>Email</b></div>
	<div class="col-sm-3"><b>Status / Waiver</b></div>
</div>

<div class="row top-buffer">
	{% if reselleragent_data != "" %}
		{% for a in reselleragent_data %}
			<div class="col-sm-3">
				<input type="button" value="Change" class="btn btn-primary">&nbsp;&nbsp;{{a.name}}
			</div>
			<div class="col-sm-3">
				<a href="mailto:{{email}}">{{a.email}}</a>
			</div>
			<div class="col-sm-3">
				{{a.status}} / 
				{% if a.waiver == "No" %}
					<font color="red">{{a.waiver}}</font>
				{% else %}
					<font color="green">{{a.waiver}}</font>
				{% endif %}
			</div>
		{% endfor %}
	{% else %}
		<div class="col-sm-9">
			<input type="button" value="Assign Agent" class="btn btn-primary">
		</div>
	{% endif %}
</div>


{% endblock %}

{% block footer %}
    {% include('footer.html.twig') %}
{% endblock %}