{% extends 'base.html.twig' %}
{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}

<div class="row top-buffer">
	<div class="col-sm-8">
		<h2><a href="{{path('listresellers')}}">Reseller Agents</a> : {{company}}
		<input type="button" value="Add Agent" class="btn btn-success"
		onclick="document.location.href='#'">
		</h2>
		{% include('flash-messages.html.twig') %}
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8 table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th><b>Name</b></th>
					<th><b>Email</b></th>
					<th><b>City</b></th>
					<th><b>Country</b></th>
					<th><b>Waiver</b></th>
					<th><b>Status</b></th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
			{% for d in data %}
			<tr>
				<td>{{d.first}} {{d.last}}</td>
				<td>{{d.email}}</td>
				<td>{{d.city}}</td>
				<td>{{d.country}}</td>
				<td>
					{% if d.waiver == "No" %}
						<font color="red">No</font>
					{% else %}
						<font color="green">Yes</font>
					{% endif %}
				</td>
				<td>{{d.status}}</td>
				<td>
					<form action="{{path('editreseller')}}" method="post">
					<input type="hidden" name="resellerID" value="{{d.resellerID}}">
					<input type="submit" value="Edit" class="btn btn-primary">
					</form>
				</td>			
			</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>




{% endblock %}

{% block footer %}
    {% include('footer.html.twig') %}
{% endblock %}