{% extends 'base.html.twig' %}
{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}

<style>
.alert{
   margin: 0;
}
</style>

<div class="row top-buffer">
	<div class="col-sm-12">
		<h2>Reservation # {{reservationID}} ({{first}} {{middle}} {{last}})</h2>
		{% include('flash-messages.html.twig') %}
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8">
		{% include('reservation_tabs.html.twig') %}
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8">
		<h3><a href="{{path('gishome',{'reservationID': reservationID, 'bunk': bunk, 'roomID': roomID, 'inventoryID': inventoryID, 'contactID': contactID})}}">GIS Home</a> : Waiver</h3>
	</div>
</div>

{% if gis_waiver == "" %}
<div class="row top-buffer">
	<div class="col-sm-8">
		<div class="alert alert-danger">The waiver has not been completed by the guest.</div>
	</div>
</div>
{% else %}
<div class="row top-buffer">
	<div class="col-sm-8">
		<input type="button" value="Download Waiver" class="btn btn-success btn-lg"
		onclick="window.open('{{gisurl}}/staff_download_waiver&contactID={{contactID}}&reservationID={{reservationID}}&inventoryID={{inventoryID}}')">
	</div>
</div>
{% endif %}




{% endblock %}

{% block footer %}
    {% include('footer.html.twig') %}
{% endblock %}