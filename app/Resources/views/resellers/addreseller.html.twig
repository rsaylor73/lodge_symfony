{% extends 'base.html.twig' %}
{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}

<div class="row top-buffer">
	<div class="col-sm-8">
		<h2>Add Reseller</h2>
		{% include('flash-messages.html.twig') %}
	</div>
</div>

<form action="{{path('savereseller')}}" method="post">

<div class="row top-buffer">
	<div class="col-sm-3">Reseller Type:</div>
	<div class="col-sm-3">
		<select name="reseller_typeID" class="form-control" required>
		<option selected value="">Select</option>
		{% for r in resellertypes %}
			{% if r.status == "Active" %}
				<option value="{{r.reseller_typeID}}">{{r.type}}</option>
			{% endif %}
		{% endfor %}
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Company:</div>
	<div class="col-sm-3">
		<input type="text" name="company" class="form-control" required>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">First Name:</div>
	<div class="col-sm-3">
		<input type="text" name="first" class="form-control" required>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Middle Name:</div>
	<div class="col-sm-3">
		<input type="text" name="middle" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Last Name:</div>
	<div class="col-sm-3">
		<input type="text" name="last" class="form-control" required>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Email:</div>
	<div class="col-sm-3">
		<input type="text" name="email" class="form-control" required>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Address:</div>
	<div class="col-sm-3">
		<input type="text" name="address" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">City:</div>
	<div class="col-sm-3">
		<input type="text" name="city" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">State:</div>
	<div class="col-sm-3">
		<select name="state" class="form-control">
		<option selected value="">Select if in the US</option>
		{% for s in states %}
			<option value="{{s.state_abbr}}">{{s.state}}</option>
		{% endfor %}
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Province:</div>
	<div class="col-sm-3">
		<input type="text" name="province" placeholder="Only if not in the US" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Zip Code:</div>
	<div class="col-sm-3">
		<input type="text" name="zip" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Country:</div>
	<div class="col-sm-3">
		<select name="countryID" class="form-control" required>
		<option value="">Select</option>
		{% for c in countries %}
			<option value="{{c.countryID}}">{{c.country}}</option>
		{% endfor %}
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Website URL:</div>
	<div class="col-sm-3">
		<input type="text" name="url" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Phone:</div>
	<div class="col-sm-3">
		<input type="text" name="phone" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Phone 2:</div>
	<div class="col-sm-3">
		<input type="text" name="phone2" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Commission:</div>
	<div class="col-sm-3">
		<input type="number" name="commission" value="10" required class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Status:</div>
	<div class="col-sm-3">
		<select name="status" class="form-control">
			<option selected>Active</option>
			<option>Inactive</option>
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8">
		<input type="submit" value="Save" class="btn btn-success">&nbsp;
		<input type="button" value="Cancel" class="btn btn-warning"
		onclick="document.location.href='{{path('listresellers')}}'">
	</div>
</div>




</form>



{% endblock %}

{% block footer %}
    {% include('footer.html.twig') %}
{% endblock %}