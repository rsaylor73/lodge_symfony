{% extends 'base.html.twig' %}
{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}

<div class="row top-buffer">
	<div class="col-sm-8">
		<h2>Edit Reseller</h2>
		{% include('flash-messages.html.twig') %}
	</div>
</div>

<form action="{{path('updatereseller')}}" method="post">
<input type="hidden" name="resellerID" value="{{resellerID}}">

<div class="row top-buffer">
	<div class="col-sm-3">Reseller Type:</div>
	<div class="col-sm-3">
		<select name="reseller_typeID" class="form-control">
		{% for r in resellertypes %}
			{% if reseller_typeID == r.reseller_typeID %}
				<option selected value="{{r.reseller_typeID}}">{{r.type}} (Default)</option>
			{% else %}
				{% if r.status == "Active" %}
					<option value="{{r.reseller_typeID}}">{{r.type}}</option>
				{% endif %}
			{% endif %}
		{% endfor %}
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Company:</div>
	<div class="col-sm-3">
		<input type="text" name="company" value="{{company}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">First Name:</div>
	<div class="col-sm-3">
		<input type="text" name="first" value="{{first}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Middle Name:</div>
	<div class="col-sm-3">
		<input type="text" name="middle" value="{{middle}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Last Name:</div>
	<div class="col-sm-3">
		<input type="text" name="last" value="{{last}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Email:</div>
	<div class="col-sm-3">
		<input type="text" name="email" value="{{email}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Address:</div>
	<div class="col-sm-3">
		<input type="text" name="address" value="{{address}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">City:</div>
	<div class="col-sm-3">
		<input type="text" name="city" value="{{city}}" class="form-control">
	</div>
</div>

{% if countryID == "2" %}
<div class="row top-buffer">
	<div class="col-sm-3">State:</div>
	<div class="col-sm-3">
		<select name="state" class="form-control">

		{% for s in states %}
			{% if state == s.state_abbr %}
				<option selected value="{{s.state_abbr}}">{{s.state}} (Default)</option>
			{% else %}
				<option value="{{s.state_abbr}}">{{s.state}}</option>
			{% endif %}		
		{% endfor %}

		</select>
	</div>
</div>
{% else %}
<div class="row top-buffer">
	<div class="col-sm-3">Province:</div>
	<div class="col-sm-3">
		<input type="text" name="province" value="{{province}}" class="form-control">
	</div>
</div>
{% endif %}

<div class="row top-buffer">
	<div class="col-sm-3">Zip Code:</div>
	<div class="col-sm-3">
		<input type="text" name="zip" value="{{zip}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Country:</div>
	<div class="col-sm-3">
		<select name="countryID" class="form-control">
		{% for c in countries %}
			{% if countryID == c.countryID %}
				<option selected value="{{c.countryID}}">{{c.country}} (Default)</option>
			{% else %}
				<option value="{{c.countryID}}">{{c.country}}</option>
			{% endif %}		
		{% endfor %}
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Website URL:</div>
	<div class="col-sm-3">
		<input type="text" name="url" value="{{url}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Phone:</div>
	<div class="col-sm-3">
		<input type="text" name="phone" value="{{phone}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Phone 2:</div>
	<div class="col-sm-3">
		<input type="text" name="phone2" value="{{phone2}}" class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Commission:</div>
	<div class="col-sm-3">
		<input type="number" name="commission" value="{{commission}}" required class="form-control">
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-3">Status:</div>
	<div class="col-sm-3">
		<select name="status" class="form-control">
			<option selected value="{{status}}">{{status}} (Default)</option>
			<option>Active</option>
			<option>Inactive</option>
		</select>
	</div>
</div>

<div class="row top-buffer">
	<div class="col-sm-8">
		<input type="submit" value="Update" class="btn btn-success">&nbsp;
		<input type="button" value="Cancel" class="btn btn-warning"
		onclick="document.location.href='{{path('listresellers')}}'">
	</div>
</div>




</form>



{% endblock %}

{% block footer %}
    {% include('footer.html.twig') %}
{% endblock %}